<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.component.splash.SplashActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="from"
        android:textColor="#009688"
        app:layout_constraintBottom_toTopOf="@+id/iv_logo_meta"
        app:layout_constraintEnd_toEndOf="@+id/iv_logo_meta"
        app:layout_constraintStart_toStartOf="@+id/iv_logo_meta" />

    <ImageView
        android:id="@+id/iv_logo_instagram"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_instagram" />



    <ImageView
        android:id="@+id/iv_logo_meta"
        android:layout_width="80dp"
        android:layout_height="27dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="fitXY"
        android:layout_marginBottom="45dp"
        app:srcCompat="@drawable/ic_meta_instagram" />




</androidx.constraintlayout.widget.ConstraintLayout>